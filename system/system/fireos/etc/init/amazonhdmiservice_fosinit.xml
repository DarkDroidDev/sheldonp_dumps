  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.amazon.com/fireos/base/core/config/ fosinit.xsd">
    <vendor-services>
        <service impl="com.amazon.android.service.hdmi.AmazonHdmiService" />
